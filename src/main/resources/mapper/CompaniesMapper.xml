<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hz.sellcloud.mapper.CompaniesMapper">
    <select id="getCompanyMail" resultType="String">
        SELECT u.user_mail from users u ,companies c where c.company_user = u.user_id and c.company_id = ${id};
    </select>
</mapper>
